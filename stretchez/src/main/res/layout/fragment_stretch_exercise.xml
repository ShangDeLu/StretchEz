<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stretch_exercise_name_label" />

    <EditText
        android:id="@+id/stretch_exercise_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/stretch_exercise_name" />

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stretch_exercise_description_label" />

    <EditText
        android:id="@+id/stretch_exercise_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/stretch_exercise_description" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stretch_exercise_link_label" />

    <EditText
        android:id="@+id/stretch_exercise_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/stretch_exercise_link" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/stretch_exercise_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:background="@color/bright_lavender"
            android:text="@string/save_button" />

        <Button
            android:id="@+id/stretch_exercise_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:background="@color/bright_lavender"
            android:text="@string/return_button" />

    </LinearLayout>
</LinearLayout>
